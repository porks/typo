<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @current_user.admin? %>
<%= form_tag({ :controler => 'admin/content', :action => 'merge', :id => @article.id }, :method => 'put', :class => 'article') do %>

  <div class=''>
    <h4><%= _("Merge Articles") %></h4>
    <%= text_field_tag(:merge_with, 'Article ID') %>
    <%= submit_tag 'Merge' %>
  </div>
<% end %>

<% end %>

